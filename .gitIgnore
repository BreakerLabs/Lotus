# Cmake folders
cmake-build-debug/
cmake-build-release/
build/

# IDE & Directory files
.vscode/

# Ignore CLion settings
.idea/

# Ignore system files
*.swp
*.swo
*.DS_Store
Thumbs.db

# Ignore compiled Object files
*.o
*.obj
*.so
*.a
*.dylib
*.dll
*.exe
# but don't ignore the lotus.exe in the bin directory
!./bin/lotus.exe

# Ignore temporary files
*.tmp
*.temp
*.bak
*.log

# Sensitive information
*.env
!*.env.example

# Ignore .lts, .ltsu, and .lotus files everywhere
*.lts
*.ltsu
*.lotus
# But don't ignore them in ./tests/, ./sdl/ or their subdirectories
!./tests/*.lts
!./tests/*.ltsu
!./tests/*.lotus
!./tests/**/*.lts
!./tests/**/*.ltsu
!./tests/**/*.lotus
!./sdl/*.lts
!./sdl/*.ltsu
!./sdl/*.lotus
!./sdl/**/*.lts
!./sdl/**/*.ltsu
!./sdl/**/*.lotus


# Ignore other autogenerated files
*.sln
*.suo
*.user
*.userosscache
*.dbmdl