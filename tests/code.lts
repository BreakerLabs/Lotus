fn main() {
     srand(time(0 as i64) as i32);

     // skapa en lista med alla möjliga val
     alternativ := ["sten", "sax", "pase"];

     // låt datorn göra ett slumpassigt val
     datornsVal := rand() % 3;

     // låt spelaren välja
     printf("Valj sten (0), sax (1) eller pase (2): ");
     spelarensVal: i32;
     scanf("%d", &spelarensVal);

     // visa vinnaren
     if (spelarensVal == datornsVal) {
         printf("Det blev oavgjort!\nDu valde: %s\nDatorn valde: %s\n", alternativ[spelarensVal], alternativ[datornsVal]);
     } else if (
         (spelarensVal == 0 && datornsVal == 1) ||
         (spelarensVal == 1 && datornsVal == 2) ||
         (spelarensVal == 2 && datornsVal == 0)
     ) {
         printf("Du vann!\nDu valde: %s\nDatorn valde: %s\n", alternativ[spelarensVal], alternativ[datornsVal]);
     } else {
         printf("Du forlorade!\nDu valde: %s\nDatorn valde: %s\n", alternativ[spelarensVal], alternativ[datornsVal]);
     }
}
